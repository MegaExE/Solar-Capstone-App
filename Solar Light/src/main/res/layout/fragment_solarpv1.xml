<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/PV1_Date_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label" />

    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:gravity="center_horizontal"
        android:text="PV1"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PV1_Power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/PV1_Power_Value"
        app:layout_constraintEnd_toStartOf="@+id/PV1_Date_Value"
        app:layout_constraintStart_toStartOf="@+id/PV1_Dailyyield" />

    <TextView
        android:id="@+id/PV1_Dailyyield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/PV1_Dialyyield_Value"
        app:layout_constraintEnd_toEndOf="@+id/PV1_Totalyield"
        app:layout_constraintStart_toStartOf="@+id/PV1_Totalyield" />

    <TextView
        android:id="@+id/PV1_Power_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="31dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/PV1_Date_Value"
        app:layout_constraintTop_toBottomOf="@+id/PV1_Date_Value" />

    <TextView
        android:id="@+id/PV1_Dialyyield_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/PV1_Power_Value"
        app:layout_constraintTop_toBottomOf="@+id/PV1_Power_Value" />

    <TextView
        android:id="@+id/PV1_Totalyield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/PV1_Totalyield_Value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/PV1_Totalyield_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/PV1_Dialyyield_Value"
        app:layout_constraintTop_toBottomOf="@+id/PV1_Dialyyield_Value" />

</android.support.constraint.ConstraintLayout>